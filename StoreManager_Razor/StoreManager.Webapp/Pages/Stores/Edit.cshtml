@page "{guid}"
@model StoreManager.Webapp.Pages.Stores.EditModel

<main>
    <h2>Edit Store Details</h2>
    <form method="post">
        <input type="hidden" asp-for="Store.Guid" />

        <div class="form-group">
            <label asp-for="Store.Name">Name</label>
            <input class="form-control" asp-for="Store.Name" />
            <span asp-validation-for="Store.Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Store.CloseDate">Closing Date</label>
            <input type="date" class="form-control" asp-for="Store.CloseDate" />
            <span asp-validation-for="Store.CloseDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</main>
