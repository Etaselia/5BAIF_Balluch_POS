@page "{id:guid}"
@model RichDomainModelHealthcareApp.Pages.Clinicians.ClinicianDetailsModel

<h2>Clinician Details</h2>

@if (Model.Clinician.Id == null)
{
    <p>Clinician not found.</p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Clinician.Id</dd>
        
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Clinician.Name.FirstName @Model.Clinician.Name.LastName</dd>
        
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">
            @Model.Clinician.Address.Street, 
            @Model.Clinician.Address.City, 
            @Model.Clinician.Address.State, 
            @Model.Clinician.Address.ZipCode
        </dd>
        
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Clinician.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.Clinician.PhoneNumber</dd>
    </dl>
}
