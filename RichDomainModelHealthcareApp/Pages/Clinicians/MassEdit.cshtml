@page
@model RichDomainModelHealthcareApp.Pages.Clinicians.MassEditModel

<h2>Assign New Patient to Multiple Clinicians</h2>

<form method="post">
    <div class="form-group">
        <label for="selectedPatient">Select Patient:</label>
        <select asp-for="SelectedPatientId" asp-items="Model.PatientsSelectList" class="form-control">
        </select>
    </div>

    <div>
        <label>Select Clinicians and Specify Reason for Visit:</label>
        @foreach (var clinician in Model.Clinicians)
        {
            <div class="form-check">
                <input asp-for="@clinician.IsSelected" class="form-check-input" type="checkbox">
                <label class="form-check-label">
                    @clinician.Name
                    <input asp-for="@clinician.ReasonForVisit" class="form-control" placeholder="Reason for visit">
                </label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Assign Patient</button>
</form>