@page
@model PatientsByClinicianModel

<h1>Patients Grouped by Clinician</h1>

@if (Model.ClinicianPatientsGroups != null && Model.ClinicianPatientsGroups.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
            <tr>
                <th>Clinician Name</th>
                <th>Patients</th>
                <th>Actions</th> <!-- Add this line -->
            </tr>
            </thead>
            <tbody>
            @foreach (var group in Model.ClinicianPatientsGroups)
            {
                <tr>
                    <td>@group.ClinicianName</td>
                    <td>
                        <ul>
                            @foreach (var patientName in group.PatientNames)
                            {
                                <li>@patientName</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <!-- Assuming the clinician has a unique identifier, e.g., ClinicianId -->
                        <!-- Replace 'EditClinician' with your actual Edit action method name -->
                        <!-- Replace 'ClinicianDetails' with your actual Details action method name -->
                        <a class="btn btn-primary" href="/Clinicians/Edit/@group.ClinicianId">Edit</a>
                        <a class="btn btn-info" href="/Clinicians/Details/@group.ClinicianId">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No patient-clinician groupings found.</p>
}