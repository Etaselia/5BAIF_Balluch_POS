@page
@model RichDomainModelHealthcareApp.Pages.Clinicians.CreateModel
@{
ViewData["Title"] = "Create Clinician";
}

<h1>Create Clinician</h1>

<form method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Clinician.Name.FirstName" class="control-label"></label>
                <input asp-for="Clinician.Name.FirstName" class="form-control" value="@Model.Clinician.Name.FirstName" />
                <span asp-validation-for="Clinician.Name.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.Name.LastName" class="control-label"></label>
                <input asp-for="Clinician.Name.LastName" class="form-control" value="@Model.Clinician.Name.LastName" />
                <span asp-validation-for="Clinician.Name.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.Specialty" class="control-label"></label>
                <input asp-for="Clinician.Specialty" class="form-control" value="@Model.Clinician.Specialty" />
                <span asp-validation-for="Clinician.Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.PhoneNumber" class="control-label"></label>
                <input asp-for="Clinician.PhoneNumber" class="form-control" value="@Model.Clinician.PhoneNumber" />
                <span asp-validation-for="Clinician.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Clinician.Address.Street" class="control-label"></label>
                <input asp-for="Clinician.Address.Street" class="form-control" value="@Model.Clinician.Address.Street" />
                <span asp-validation-for="Clinician.Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.Address.City" class="control-label"></label>
                <input asp-for="Clinician.Address.City" class="form-control" value="@Model.Clinician.Address.City" />
                <span asp-validation-for="Clinician.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.Address.State" class="control-label"></label>
                <input asp-for="Clinician.Address.State" class="form-control" value="@Model.Clinician.Address.State" />
                <span asp-validation-for="Clinician.Address.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinician.Address.ZipCode" class="control-label"></label>
                <input asp-for="Clinician.Address.ZipCode" class="form-control" value="@Model.Clinician.Address.ZipCode" />
                <span asp-validation-for="Clinician.Address.ZipCode" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Clinician</button>
</form>

<!-- Modal for error messages -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul id="errorList">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                    <li>@Model.ErrorMessage</li>
                    }
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                    <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    $(document).ready(function () {
        if ($('#errorList li').length > 0) {
            $('#errorModal').modal('show');
        }
    });
</script>
}
